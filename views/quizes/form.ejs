<label for="preg" class="rem">Pregunta:</label>
<input type="text" id="preg" name="quiz[pregunta]" value="<%=quiz.pregunta%>"/><p>
<label for="resp" class="rem">Respuesta:</label>
<input type="text" id="resp" name="quiz[respuesta]" value="<%=quiz.respuesta%>"/><p>
<label for="tema" class="rem">Tematica:</label>
<select id="tema" name="quiz[tematica]">
  <option value="otro" selected>Otro</option>
  <option value="humanidades" <%=quiz.tematica==="humanidades"?"selected":""%>>Humanidades</option>
  <option value="ocio" <%=quiz.tematica==="ocio"?"selected":""%>>Ocio</option>
  <option value="ciencia" <%=quiz.tematica==="ciencia"?"selected":""%>>Ciencia</option>
  <option value="tecnologia" <%=quiz.tematica==="tecnologia"?"selected":""%>>Tecnologia</option>
</select>
<br/>
<a href="/quizes"><button type="button">Cancelar</button></a>
<input type="submit" value="salvar">
